# ========================================
# Prometheus Configuration
# ========================================

# Option 1: Single-Region Configuration (Legacy)
# -----------------------------------------------
# Use these variables for a single Prometheus instance
PROMETHEUS_URL=http://your-prometheus-server:9090
# Set to false to disable SSL verification
PROMETHEUS_URL_SSL_VERIFY=True
# Set to true to disable Prometheus UI links in query results (saves context tokens)
PROMETHEUS_DISABLE_LINKS=False

# Authentication (if needed) - Choose one method
# For basic auth
PROMETHEUS_USERNAME=your_username
PROMETHEUS_PASSWORD=your_password
# OR for bearer token auth
PROMETHEUS_TOKEN=your_token

# Option 2: Multi-Region Configuration
# -----------------------------------------------
# Use these variables to configure multiple Prometheus instances
# Each region requires a PROMETHEUS_URL_<REGION> variable
# Region names are case-insensitive (e.g., ATL, atl, Atl are equivalent)

# Atlanta region
# PROMETHEUS_URL_ATL=http://sos-proms01-atl01.sos.omnissa.com:9090
# PROMETHEUS_SSL_VERIFY_ATL=True
# PROMETHEUS_USERNAME_ATL=your_username
# PROMETHEUS_PASSWORD_ATL=your_password
# # OR
# PROMETHEUS_TOKEN_ATL=your_token
# PROMETHEUS_CUSTOM_HEADERS_ATL={"X-Custom-Header": "value"}

# Bangalore region
# PROMETHEUS_URL_BLR=http://sos-proms01-blr01.sos.omnissa.com:9090
# PROMETHEUS_SSL_VERIFY_BLR=True
# PROMETHEUS_TOKEN_BLR=your_blr_token
# PROMETHEUS_CUSTOM_HEADERS_BLR={"X-Environment": "production"}

# Washington DC region
# PROMETHEUS_URL_WDC=http://sos-proms01-wdc01.sos.omnissa.com:9090
# PROMETHEUS_SSL_VERIFY_WDC=False
# PROMETHEUS_USERNAME_WDC=admin
# PROMETHEUS_PASSWORD_WDC=admin_password

# Default region to use when no region is specified in tool calls
# PROMETHEUS_DEFAULT_REGION=atl

# ========================================
# Global Settings (apply to all regions)
# ========================================

# Organization ID for multi-tenant Prometheus setups
# ORG_ID=your_org_id

# Disable Prometheus UI links globally (saves tokens)
# PROMETHEUS_DISABLE_LINKS=False

# ========================================
# MCP Server Configuration
# ========================================

# Transport mode: stdio, http, or sse
# PROMETHEUS_MCP_SERVER_TRANSPORT=stdio

# HTTP transport settings (only relevant for non-stdio transports)
# PROMETHEUS_MCP_BIND_HOST=localhost
# PROMETHEUS_MCP_BIND_PORT=8080